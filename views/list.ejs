<%- include("header") -%>
  <div id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="boxen">

    <!-- ADDING -->
    <div class="d-flex flex-column input-box shadow">
      <form class="item" action="/" method="post">
        <div class="p-2">
          <input type="text" name="newItemTitle" placeholder="Title" autocomplete="off">
        </div>
        <div class="p-2">
          <input type="text" name="newItemDesc" placeholder="Description" autocomplete="off">
        </div>
        <div class="p-2">
          <button class="addbutton" type="submit" name="list">+</button>
        </div>
      </form>
    </div>

    <!-- TODOS -->
    <% newListItems.forEach(function(item){ %>
      <form action="/delete" method="post">
        <div class="list-group shadow" id="<%=item._id%>">
          <div class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
            <i class="fa-solid fa-thumbtack"></i>
            <div class="d-flex gap-2 w-100 justify-content-between">
              <div>
                <h4 id="<%=item._id%>" class="mb-0"><%= item.title %></h4>
                <p class="mb-0 opacity-75"><%= item.desc %></p>
              </div>
            </div>
            <div class="links">
              <!-- DELETE-->
              <button class="opacity-50 button deleteButton" id="<%=item._id%>" type="submit" name="deleteButton" value="<%=item._id%>"><i class="fa-solid fa-ban"></i></button>
            </div>
          </div>     
        </div>
      </form>
    <% }); %>

  </div>

  <div class="bs-example">
    <div id="myModal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Update Todo</h5>
              </div>
              <div class="modal-body">
                <div class="d-flex flex-column">
                  <form id="modalFormen" action="/update" class="item" method="post">
                    <div class="p-2">
                      <input type="text" name="updateTitle" placeholder="New Title" autocomplete="off">
                    </div>
                    <div class="p-2">
                      <input type="text" name="updateDesc" placeholder="New Desc" autocomplete="off">
                    </div>
                    <div class="p-2">
                      <button type="submit" class="btn btn-secondary">Update Todo</button>
                    </div>
                  </form>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-danger">Close</button>
              </div>
            </div>
        </div>
    </div>
</div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="js/app.js"></script>
<%- include("footer") -%>
